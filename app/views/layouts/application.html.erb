<!DOCTYPE html>
<html>
<head>
  <title>Workspace</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header class="navbar navbar-inverse">
    <div class="container">
      <%= link_to '童話ブック', books_path, class: "navbar-brand"%>
      <ul class="nav navbar-nav navbar-right">
        <li><%=link_to books_path do %>
              <span class="glyphicon glyphicon-home" aria-hidden="true"></span> トップに戻る
            <% end %>
        </li>
        <li><%=link_to new_book_path do %>
              <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> 本を追加する
            <% end %>
        </li>
        <li><%=link_to books_path do %>
              <span class="glyphicon glyphicon-log-in" aria-hidden="true"></span> ログインする
            <% end %>
        </li>
        
      </ul>
    </div>
  </header>
  <div class="container">
      <%= yield %>
  </div>
</body>
</html>
